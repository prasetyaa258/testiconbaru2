@model IEnumerable<CrudMahasiswa.Models.Mahasiswa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table id="employeeTable" class="table table-striped table-bordered" style="width:100%"></table>
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" /
@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>}

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_mhs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nama_mhs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_falkutas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_jurusan)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_mhs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_mhs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_falkutas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_jurusan)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MahasiswaID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MahasiswaID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MahasiswaID })
                </td>
            </tr>
        }

    </table>
